{
  "name": "yoruba-cinemax",
  "version": "1.0.0",
  "description": "A premium Yoruba movie streaming website with an integrated admin Telegram bot.",
  "main": "dist/server.js",
  "scripts": {
    "build:client": "esbuild src/index.tsx --bundle --outfile=public/dist/index.js --loader:.tsx=tsx --jsx=automatic",
    "build:server": "tsc -p tsconfig.json",
    "build": "npm run build:client && npm run build:server",
    "start": "npm run build && node dist/server.js",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "esbuild src/index.tsx --bundle --outfile=public/dist/index.js --loader:.tsx=tsx --jsx=automatic --watch",
    "dev:server": "ts-node-dev --respawn --transpile-only server.ts"
  },
  "keywords": [
    "react",
    "typescript",
    "express",
    "telegram",
    "bot",
    "gemini"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.602.0",
    "@google/genai": "^1.19.0",
    "express": "^4.19.2",
    "hls.js": "^1.5.8",
    "node-telegram-bot-api": "^0.66.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/node-telegram-bot-api": "^0.64.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}